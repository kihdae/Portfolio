#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit quality checks..."

# Run linting
npm run lint:check
if [ $? -ne 0 ]; then
  echo "❌ Linting failed. Run 'npm run lint:fix' to fix issues."
  exit 1
fi

# Run formatting check
npm run format:check
if [ $? -ne 0 ]; then
  echo "❌ Formatting check failed. Run 'npm run format' to fix issues."
  exit 1
fi

# Run type checking
npm run type-check
if [ $? -ne 0 ]; then
  echo "❌ Type checking failed. Fix TypeScript errors before committing."
  exit 1
fi

echo "✅ All quality checks passed!" 